<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kwaliteit.Pages.Afkeur.StartAfkeurUnitsPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Scan unit" Command="{Binding ScanUnitsCommand}" HorizontalOptions="End" Margin="0,20,0,0" Style="{StaticResource PrimaryButton}"></Button>
            <Label Text="Gescande unit"></Label>
            <Entry Text="{Binding UnitNaam}" Placeholder=""></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>